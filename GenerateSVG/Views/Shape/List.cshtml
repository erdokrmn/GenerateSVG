@model GenerateSVG.ViewModels.ShapeMatrixViewModel

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <title>Matris ve SVG Atama</title>
    <link href="~/css/shape-list.css" rel="stylesheet" />
    <script src="~/js/shape-list.js" defer></script>

    <!-- Bootstrap için -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<nav class="navbar navbar-expand-lg navbar-light bg-light mb-4 rounded shadow-sm px-4">
    <a class="navbar-brand fw-bold" href="#">SVG Aracı</a>
    <div class="collapse navbar-collapse">
        <ul class="navbar-nav ms-auto">
            <li class="nav-item">
                <a class="nav-link" href="/Shape/Create">Yeni Şekil Oluştur</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/Shape/List">Şekil Listesi</a>
            </li>
        </ul>
    </div>
</nav>

<body class="p-4">
    <div class="container my-4">
        <h2 class="mb-4">SVG Seç ve Hücreye Yerleştir</h2>

        <!-- Matris boyutu seçimi -->
        <div class="d-flex align-items-center gap-3 mb-3">
            <label for="matrixSizeSelector">Matris Boyutu:</label>
            <select id="matrixSizeSelector" class="form-select w-auto">
                <option value="2" selected>2 x 2</option>
                <option value="3">3 x 3</option>
            </select>
            <button id="matrixCreateBtn" type="button" class="btn btn-secondary">Matris Oluştur</button>
        </div>

        <div class="row">
            <!-- Matris Alanı -->
            <div class="col-md-8">
                <div id="matrix-area" class="d-flex flex-column gap-2"></div>
            </div>

            <!-- SVG Listesi -->
            <div class="col-md-4">
                <h5>SVG Seç</h5>
                <div id="svg-list">
                    @foreach (var shape in Model.Shapes)
                    {
                        <div class="svg-box" data-svg="@shape.SvgPath">
                            <img src="@shape.SvgPath" class="svg-thumb" />
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</body>
</html>
